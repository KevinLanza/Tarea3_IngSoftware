<p id="notice"><%= notice %></p>

<h1>Lists</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Lastname</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  
  <link rel="stylesheet" type="text/css" href="CSS.css">
<style type="text/css">  
body 
{  
background-image: url(https://news.marvel.com/wp-content/uploads/sites/28/2016/10/57ed72cbc3d2c.jpg);
background-size: 100%;
background-repeat: no-repeat
}
</style> 
  
</body> 
  
  
  
  <tbody>
    <% @lists.each do |list| %>
      <tr>
        <td><%= list.name %></td>
        <td><%= list.lastname %></td>
        <td><%= list.phone %></td>
        <td><%= link_to 'Show', list %></td>
        <td><%= link_to 'Edit', edit_list_path(list) %></td>
        <td><%= link_to 'Destroy', list, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

